{% extends "layout.twig" %}
{% block styleAdmin %}<link rel="stylesheet" href="../../assets/css/styles-admin.css">{% endblock %}
{% block imgAdmin %}<img src="../../assets/img/users/{{userAdmin.userPhoto}}" alt="">{% endblock %}
{% block content %}

<!--Formulario de actualización de usuario-->

    <div class="container">

        {% if responseMessage %}
            <div class="alert alert-success" role="alert" style=''>
                {{ responseMessage }}
            </div>
        {% endif %}
        {% if warningMessage %}
            <div class="alert alert-warning" role="alert" style=''>
                {{ warningMessage }}
            </div>
        {% endif %}
        {% if errorsMessage %}
            <div class="alert alert-danger" role="alert" style=''>
            {% for error in errorsMessage %}
                {{ error }} <br>
            {% endfor %}
            </div>
        {% endif %}

        <h3>Actualizar Usuario</h3>
        <form action='/user/update/{{userUpdate.userId}}' id='formulario' autocomplete="off" method='POST'>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="userNombre">Nombre</label>
                    <input type="text" class="form-control" id="userNombre" name='userNombre' value="{{userUpdate.userName}}" placeholder="Nombre">
                </div>
                <div class="form-group col-md-6">
                    <label for="userApellido">Apellidos</label>
                    <input type="text" class="form-control" id="userApellido" name='userApellido' value="{{userUpdate.userLastName}}" placeholder="Apellidos">
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="userCedula"># Cédula</label>
                    <input type="text" class="form-control" id="userCedula" name='userCedula' value="{{userUpdate.userCedula}}" placeholder="Cédula">
                </div>
                <div class="form-group col-md-6">
                    <label for="userTelefono"># Teléfono/Celular</label>
                    <input type="tel" class="form-control" id="userTelefono" name='userTelefono' value="{{userUpdate.userPhone}}" placeholder="Teléfono o celular">
                </div>
            </div>
            <div class="form-group">
                <label for="userCorreo">Correo Electrónico</label>
                <input type="email" class="form-control" id="userCorreo" name='userCorreo' value="{{userUpdate.userEmail}}" placeholder="Correo electrónico">
            </div>
            
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <label class="input-group-text" for="userEstado">Estado</label>
                </div>
                <select class="custom-select" id="userEstado" name='userEstado'>
                {% if userUpdate.userStatus %}
                    <option value="activo">Activo</option>
                    <option value="inactivo">Inactivo</option>
                {% else %}
                    <option value="inactivo" >Inactivo</option>
                    <option value="activo">Activo</option>
                {% endif %}
                </select>
            </div>
             <a class="btn btn-warning btn-lg btn-block mt-3" href="/user/changePass/{{userUpdate.userId}}"><i class="fas fa-list-ul"></i>Cambiar Contraseña</a>
            <button type="submit" class="btn btn-dark btn-lg btn-block mt-3">Actualizar</button>
        </form>
    </div>

    <!--/Formulario de actualización de usuario-->
    
{% endblock %}
{% block javaScriptAdmin %}
<script src="../../assets/js/sidebar.js"></script>
<script src="../../assets/js/form-update-user.js"></script>
{% endblock %}