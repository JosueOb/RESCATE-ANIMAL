{% extends "layout.twig" %}
{% block content %}
    <div class="table-user table-responsive-sm table-responsive-md table-responsive-lg">
        <h3>Lista de usuarios</h3>
        <table class="table table-hover">
            <thead>
                <tr>
                <th scope="col">#</th>
                <th scope="col">Cédula</th>
                <th scope="col">Nombre</th>
                <th scope="col">Apellidos</th>
                <th scope="col">Correo</th>
                <th scope="col">Teléfono</th>
                <th scope="col">Estado</th>
                <th scope="col">Modificar</th>
                <th scope="col">Eliminar</th>
                </tr>
            </thead>
            <tbody>
                {% for user in listUser %}
                <tr>
                    <th scope="row">{{ loop.index}}</th>
                    <td>{{ user.userCedula }}</td>
                    <td>{{ user.userName }}</td>
                    <td>{{ user.userLastName}}</td>
                    <td>{{ user.userEmail}}</td>
                    <td>{{ user.userPhone}}</td>
                    {% if user.userStatus %}
                        <td>Activo</td>
                    {% else %}
                        <td>Inactivo</td>
                    {% endif %}
                    
                    <td><a class="btn btn-outline-primary" href="/user/update/{{user.userId}}"><i class="fas fa-user-edit"></i></a></td>
                    <td><a class="btn btn-outline-danger"  href="/user/delete/{{user.userId}}"><i class="fas fa-user-minus"></i></a></td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}